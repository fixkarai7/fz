function golden_search(f, a, b, tol)
 gr = (sqrt(5) - 1) / 2
 x1 = b - gr * (b - a)
 x2 = a + gr * (b - a)
 while abs(b - a) > tol
 if f(x1) < f(x2)
 b = x2
 x2 = x1
 x1 = b - gr * (b - a)
 else
 a = x1
 x1 = x2
 x2 = a + gr * (b - a)
 end
 end
 return (a + b) / 2
end
f(x) = x^2 - 4x
a = 0.0
b = 3.0
tolerance = 0.25
minimum = golden_search(f, a, b, tolerance)
println("Minimum point: ", minimum)
println("Minimum value: ", f(minimum))
